/* General Styling
================================================== */

body {
  background: #000;
  background-image: url( {{ 'tent_background.jpg' | asset_url }} );
  background-position: center top;
  background-repeat: no-repeat;
  color: #fff;
  font-family: 'openSansRegular', Helvetica, sans-serif;
  margin-top: 40px;
  a, a:visited {
    color: #08c;
    text-decoration: none;
  }
  img {
    max-width: 100%;
  }
}

.clear {
  clear: both;
}

h1 {
  color: #08c;
}

h2, h3 {
  color: #fff;
  font-family: 'oswaldRegular';
}

h3 {
  border-bottom: 1px solid #fff;
}

h4 {
  font-family: 'openSansRegular';
}

h5 {
  font-family: 'openSansItalic';
}

h6 {
  font-family: 'oswaldRegular';
}

.hidden {
  visibility: hidden;
}

  
/* Header
================================================== */

/* Top Utility */
.search {
  background-position: -129px 0;
  height: 19px;
  width: 18px;
}

.search:hover {
  background-position: -129px 19px;
}

.search-form {
  margin-bottom: 0;
  input {
    float: right;
  }
  #search-field{
    display: inline-block;
    margin-right: 1rem;
    padding: 2px 4px;
  }
  input.hint {
    vertical-align: sub;
  }
  input.search {
    background: url( {{ 'social_media_sprite.png' | asset_url }} ) transparent -127px 0;
    border: none;
    display: inline-block;
  }
  input.search:hover {
    background: url( {{ 'social_media_sprite.png' | asset_url }} ) transparent -127px 19px;
  }
}

.checkout-cart {
  margin-bottom: 0;
  text-align: right;
  li {
    float: right;
    margin-right: .5rem;
  }
}

.header {
  border-bottom: 1px solid #f70;
  border-top: 2px solid #08c;
  margin-bottom: 2rem;
  padding: .25rem 0;
  .shop_logo {
    padding-top: .75rem;
  }
}
/* Site Title and Navigation */
#site-title {
  position: absolute;
  text-indent: -999999999px;
}

nav[role=top_level_main_menu] {
  li {
    margin-bottom: 4rem;
  }
}

nav[role=top_level_main_menu],
nav[role=bottom_level_main_menu] {
  ul {
    position: relative;
    .has-dropdown {
      background: url( {{ 'subnav_arrow.png' | asset_url }} ) no-repeat 6px 8px;
    }
    .sub-nav-niblet {
      margin: 0;
    }
    li {
      display: inline;
      font-size: 1.75rem;
      margin-right: 1rem;
      position: relative;
      ul {
        background:rgba(0,0,0,.75);
        display: none;
        left: -50px;
        margin: 0;
        padding: 1rem 0;
        position: absolute;
        text-align: center;
        top: 30px;
        width: 100%;
        z-index: 1000;
        li {
          display: block;
          margin: 0 auto 1.5rem;
        }
        li.last {
          margin: 0;
        }
      }
    }
    li:hover ul {
      display: block;
    }
    a {
      color: #fff;
      font-family: 'oswaldLight';
      transition: all .3s;
    }
    a:hover {
      border-bottom: 5px solid #08c;
    }
  }
}


/* Main Content Area
================================================== */

.breadcrumbs {
  font-family: 'oswaldRegular';
}

#slideshow {
  padding: 0;
  text-align: center;
}

#slideshow-container {
  width: 580px;
  height: 385px;
  overflow: hidden;
  background-color: transparent;
  /* Addresses IE 6 + 7 overflow bug */
  *position: relative;
  margin: 0 auto;
}


#slides {
  display: block;
  height: 385px;
  min-width: 580px;
  margin: 0;
  padding: 0;
}

.slide {
  width: 580px;
  height: 385px;
  display: block;
  float: left;
  background-color: rgba(255,255,255,0.9);
  position: relative;
}                   

.slide-link-through {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1337;
}

.slide-caption {
  position: absolute;
  bottom: 0px;
  left: 0px;
  width: 580px;
  padding: 25px 20px;
}

.lt-ie9 .slide-caption { background: url('{{ 'ie-caption-bg.png' | asset_url }}') repeat transparent; }

.slide-caption h2 {
  font-size: 39px;
  line-height: 1.3;
  margin: 0;
  margin-left: -33px;
}

a.slide-link {
  font-size: 20px;
  border-bottom: 1px solid #ffffff;
  border-bottom: 1px solid rgba(255,255,255,0.5);
  padding-bottom:1px;
  margin-top:16px;
  margin-bottom:10px;
  margin-left:-33px;
  color:#ffffff;
  display:inline-block;
  /* Necessary for inline-block in IE */
  zoom: 1;
  *display: inline;
}

#slideshow-controls {
  display:inline-block;
  list-style-type:none;
  margin:30px 0 0 0;
  padding:0;
  /* Necessary for inline-block in IE */
  zoom: 1;
  *display: inline;
}

#slideshow-controls li:first-child {
  margin-left:0;
}

.slide-control {
  float:left;
  display:block;
  height:9px;
  width:9px;
  padding:0 3px;
  cursor:pointer;
  font-size:24px;
  top:-7px \9;
  position:relative \9;
  font-size:38px \9;
}

.lt-ie9 .slide-control {
  top:-7px;
  position:relative;
  font-size:38px;
}

.slide-control.active {
  color:#08c;
}

.prod-price {
  display: block;
  font-style: italic;
}

.checkout-link {
  text-align: right;
}

.collection-image {
  border: 2px solid #fff;
  border-radius: 2px;
  img {
    vertical-align: top;
  }
}

  
