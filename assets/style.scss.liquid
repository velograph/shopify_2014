/* 2. General Styling
================================================== */

body {
  background: #000;
  background-image: url( {{ 'tent_background.jpg' | asset_url }} );
  background-position: center top;
  background-repeat: no-repeat;
  color: #fff;
  font-family: 'openSansRegular', Helvetica, sans-serif;
  margin-top: 40px;
  a, a:visited {
    color: #08c;
    text-decoration: none;
    transition: color .2s linear;
  }
  a:hover {
    color: #fff;
    text-decoration: underline;
  }
  img {
    border-radius: 2px;
    max-width: 100%;
  }
}

h1 {
  color: #08c;
}

h2, h3 {
  color: #fff;
  font-family: 'oswaldRegular';
}

h3 {
  border-bottom: 1px solid #fff;
}

h4 {
  font-family: 'openSansBold';
}

h5 {
  font-family: 'openSansItalic';
}

h6 {
  font-family: 'oswaldRegular';
}

.hidden {
  visibility: hidden;
}

.clear {
  clear: both;
}

  
/* 3. Header
================================================== */

/* Top Utility */
.top_utility {
  margin-bottom: 1rem;
  text-align: right;
  .search-form, .checkout-cart, .utility_divider {
    display: inline-block;
    margin-left: 1rem;
  }
  .search {
    background-position: -129px 0;
    height: 19px;
    width: 18px;
  }
  .search:hover {
    background-position: -129px 19px;
  }
  .search-form {
    margin-bottom: 0;
    input {
      float: left;
      margin-bottom: 0;
    }
    input[type="text"] {
      border-radius: 15px;
      padding-left: .5rem;
    }
    #search-field{
      display: inline-block;
      margin-right: .5rem;
      padding: 2px .5rem;
    }
    input.hint {
      vertical-align: sub;
    }
    input.search {
      background: url( {{ 'social_media_sprite.png' | asset_url }} ) transparent -127px 0;
      border: none;
      display: inline-block;
    }
    input.search:hover {
      background: url( {{ 'social_media_sprite.png' | asset_url }} ) transparent -127px 19px;
    }
  }
  .utility_divider {
    color: #f70;
    font: 1.5rem 'openSansBold';
  }
  .checkout-cart {
    font-size: .75rem;
    margin-bottom: 0;
    text-align: right;
    li {
      float: left;
      margin: 0 .5rem 0 0;
      a {
        color: #fff;
      }
    }
  }
}

/* Header Container */
.header {
  border-bottom: 1px solid #f70;
  border-top: 2px solid #08c;
  margin-bottom: 2rem;
  padding: .25rem 0;
  .shop_logo {
    padding: .5rem 0;
    text-align: center;
  }
}

/* Site Title */
#site-title {
  position: absolute;
  text-indent: -999999999px;
}

/* Navigation */
nav[role=top_level_main_menu],
nav[role=bottom_level_main_menu] {
  display: inline-block;
  ul {
    margin: 0;
    position: relative;
    .has-dropdown {
      background: url( {{ 'subnav_arrow.png' | asset_url }} ) no-repeat 6px 8px;
    }
    .sub-nav-niblet {
      margin: 0;
    }
    li {
      display: inline;
      font-size: 1.75rem;
      margin-right: 1rem;
      position: relative;
      ul {
        background:rgba(0,0,0,.75);
        display: none;
        left: -30px;
        margin: 0;
        padding: 1rem 0;
        position: absolute;
        text-align: center;
        top: 30px;
        width: 100%;
        z-index: 1000;
        li {
          display: block;
          margin: 0 auto 1.5rem;
          a {
            margin-left: 0;
          }
        }
        li.last {
          margin: 0 0 .5rem 0;
        }
      }
    }
    li:hover ul {
      display: block;
    }
    a {
      color: #fff;
      font-family: 'oswaldLight';
      margin-left: 1.25rem;
      transition: all .3s;
    }
    a:hover {
      border-bottom: 5px solid #08c;
      text-decoration: none;
    }
  }
}

nav[role=top_level_main_menu] {
  padding-top: 1.75rem;
  li {
    margin-bottom: 2rem;
  }
}


/* 4. Main Content Area
================================================== */

#main {
  margin-bottom: 1rem;
}

.breadcrumbs {
  font-family: 'oswaldRegular';
}

/* Dotted Dividers */
.dotted_divider {
  border-bottom: 1px dashed #fff;
}

.divider_title {
  margin-bottom: 1rem;
  text-align: center;
}

/* Slideshow */
#slideshow {
  padding: 0;
  text-align: center;
}

#slideshow-container {
  width: 580px;
  height: 385px;
  overflow: hidden;
  background-color: transparent;
  /* Addresses IE 6 + 7 overflow bug */
  *position: relative;
  margin: 0 auto;
}

#slides {
  display: block;
  height: 385px;
  min-width: 580px;
  margin: 0;
  padding: 0;
}

.slide {
  width: 580px;
  height: 385px;
  display: block;
  float: left;
  background-color: rgba(255,255,255,0.9);
  position: relative;
}                   

.slide-link-through {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1337;
}

.slide-caption {
  position: absolute;
  bottom: 0px;
  left: 0px;
  width: 580px;
  padding: 25px 20px;
}

.lt-ie9 .slide-caption { background: url('{{ 'ie-caption-bg.png' | asset_url }}') repeat transparent; }

.slide-caption h2 {
  font-size: 39px;
  line-height: 1.3;
  margin: 0;
  margin-left: -33px;
}

a.slide-link {
  font-size: 20px;
  border-bottom: 1px solid #ffffff;
  border-bottom: 1px solid rgba(255,255,255,0.5);
  padding-bottom:1px;
  margin-top:16px;
  margin-bottom:10px;
  margin-left:-33px;
  color:#ffffff;
  display:inline-block;
  /* Necessary for inline-block in IE */
  zoom: 1;
  *display: inline;
}

#slideshow-controls {
  display:inline-block;
  list-style-type:none;
  margin:30px 0 0 0;
  padding:0;
  /* Necessary for inline-block in IE */
  zoom: 1;
  *display: inline;
}

#slideshow-controls li:first-child {
  margin-left:0;
}

.slide-control {
  float:left;
  display:block;
  height:9px;
  width:9px;
  padding:0 3px;
  cursor:pointer;
  font-size:24px;
  top:-7px \9;
  position:relative \9;
  font-size:38px \9;
}

.lt-ie9 .slide-control {
  top:-7px;
  position:relative;
  font-size:38px;
}

.slide-control.active {
  color:#08c;
}

/* Home Page Calendar */
.shop_calendar {
  background: rgba(0,0,0,.55);
  h3 {
    margin: 0 1rem 1rem;
    padding: 1rem 0 0;
  }
  ul.latest-blog-posts-list {
    padding: 0 1rem 1rem;
    li {
      border-bottom: 1px dotted #fff;
      padding-bottom: .5rem;
      h4 {
        margin-bottom: 0;
      }
    }
  }
}

/* Portals - Homepage/Parent Collection Page */
.collection_portal {
  margin-bottom: 2rem;
  .portal_title {
    color: #f70;
    margin-bottom: 0;
  }
  .collection-image, img {
    background: #222;
  }
  img {
    border: 2px solid #fff;
    transition: opacity .2s linear;
  }
  img:hover {
    opacity: .5;
  }
  h2, .collection_quantity {
    display: inline;
  }
}

.prod-price {
  display: block;
  font-style: italic;
}

.collection-image {
  border: 2px solid #fff;
  border-radius: 2px;
  img {
    vertical-align: top;
  }
}

  
/* 5. Footer 
================================================== */

.footer {
  border-bottom: 1px solid #f70;
  border-top: 2px solid #08c;
  margin-bottom: .5rem;
  padding: 1rem 0;
  ul {
    padding-top: .5rem;
  }
  li {
    margin-bottom: .25rem;
  }
  .footer_branding {
    img {
      max-width: 120px !important;
    }
  }
  .footer_social {
    padding-top: 1rem;
    a {
      background-image: url( {{ 'social_media_sprite.png' | asset_url }} );
      display: inline-block;
      overflow: hidden;
    }
    .footer_social_top,
    .footer_social_bottom {
      display: block;
      margin: 0 auto;
      width: 60px;
    }
    .footer_social_top {
      margin-bottom: 2rem;
    }
    .instagram {
      background-position: 0 0;
      clear: both;
      float: left;
      height: 18px;
      width: 18px;
    }

    .instagram:hover {
      background-position: 0 19px;
    }

    .tumblr {
      background-position: -32px 0;
      float: left;
      height: 19px;
      width: 18px;
    }

    .tumblr:hover {
      background-position: -32px -21px;
    }

    .twitter {
      background-position: -64px 0;
      float: right; 
      height: 19px;
      width: 18px;
    }

    .twitter:hover {
      background-position: -64px 19px;
    }

    .facebook {
      background-position: -98px 0;
      float: right; 
      height: 19px;
      width: 18px;
    }

    .facebook:hover {
      background-position: -98px 19px;
    }

    }

  }

.copyright {
  text-align: center;
}
