/* 2. General Styling
================================================== */

body {
  background: #000;
  background-attachment: fixed;
  background-image: url( {{ 'tent_background.jpg' | asset_url }} );
  background-position: center top;
  background-repeat: no-repeat;
  color: #fff;
  font-family: 'openSansRegular', Helvetica, sans-serif;
  margin-top: 40px;
  a, a:visited {
    color: #08c;
    text-decoration: none;
    transition: color .2s linear;
  }
  a:hover {
    color: #fff;
    text-decoration: underline;
  }
  img {
    border-radius: 2px;
    max-width: 100%;
  }
}

h1 {
  color: #08c;
}

h2, h3 {
  color: #fff;
  font-family: 'oswaldRegular';
}

h3 {
  border-bottom: 1px solid #fff;
}

h4 {
  font-family: 'openSansRegular';
}

h5 {
  font-family: 'openSansItalic';
}

h6 {
  font-family: 'openSansRegular';
}

small {
  font-size: 12px;
  font-weight: bold;
}

.hidden {
  visibility: hidden;
}

.clear {
  clear: both;
}

dl {
  dt {
    display: inline-block;
    margin-bottom: .5rem;
  }
  dd {
    line-height: 20px;
    margin-bottom: 1rem;
    padding-left: .5rem;
  }
}

  
/* 3. Header
================================================== */

/* Top Utility */
.top_utility {
  margin-bottom: 1rem;
  text-align: right;
  .search-form, .utility_divider {
    display: inline-block;
    margin-left: 1rem;
  }
  .search {
    background-position: -129px 0;
    height: 19px;
    width: 18px;
  }
  .search:hover {
    background-position: -129px 19px;
  }
  .search-form {
    margin-bottom: 0;
    input {
      float: left;
      margin-bottom: 0;
    }
    input[type="text"] {
      border-radius: 15px;
      padding-left: .5rem;
    }
    #search-field{
      display: inline-block;
      margin-right: .5rem;
      padding: 2px .5rem;
    }
    input.hint {
      vertical-align: sub;
    }
    input.search {
      background: url( {{ 'social_media_sprite.png' | asset_url }} ) transparent -127px 0;
      border: none;
      display: inline-block;
    }
    input.search:hover {
      background: url( {{ 'social_media_sprite.png' | asset_url }} ) transparent -127px 19px;
    }
  }
  .utility_divider {
    color: #f70;
    font: 1.5rem 'openSansBold';
  }
  .checkout-cart {
    display: inline-block;
    font-size: .75rem;
    margin: 0 0 0 .5rem;
    text-align: right;
    li {
      float: left;
      margin: 0 0 0 .5rem ;
      a {
        color: #fff;
      }
    }
  }
}

/* Header Container */
.header {
  border-bottom: 1px solid #f70;
  border-top: 2px solid #08c;
  margin-bottom: 2rem;
  padding: .25rem 0;
  .shop_logo {
    padding: .5rem 0;
    text-align: center;
    img {
      width: 75%;
    }
  }
}

/* Site Title */
#site-title {
  position: absolute;
  text-indent: -999999999px;
}

/* Navigation */
nav[role=top_level_main_menu],
nav[role=bottom_level_main_menu] {
  display: inline-block;
  ul {
    margin: 0;
    position: relative;
    .has-dropdown {
      background: url( {{ 'subnav_arrow.png' | asset_url }} ) no-repeat 6px 8px;
    }
    .sub-nav-niblet {
      margin: 0;
    }
    li {
      display: inline;
      font-size: 1.75rem;
      margin-right: 1rem;
      position: relative;
      ul {
        background:rgba(0,0,0,.75);
        display: none;
        left: -30px;
        margin: 0;
        padding: 1rem 0;
        position: absolute;
        text-align: center;
        top: 30px;
        width: 100%;
        z-index: 10000;
        li {
          display: block;
          margin: 0 auto 1.5rem;
          a {
            margin-left: 0;
          }
        }
        li.last {
          margin: 0 0 .5rem 0;
        }
      }
    }
    li:hover ul {
      display: block;
    }
    a, a:visited {
      color: #fff;
      font-family: 'oswaldLight';
      margin-left: 1.25rem;
      transition: all .3s;
    }
    a:hover {
      border-bottom: 5px solid #08c;
      text-decoration: none;
    }
  }
}

nav[role=top_level_main_menu] {
  padding-top: 1.75rem;
  li {
    margin-bottom: 2rem;
  }
}

#mobile_menu_container {
  display: none;
  margin-bottom: 2rem;
}

.mobile_menu {
  cursor: pointer;
  text-align: center;
  width: 50px;
  .menu_button_container {
    border-top: 1px solid #f70;
  }
  .mobile_menu_text {
    background: #f70;
    margin: 0 auto;
    padding: .25rem 0;
    width: 50px;
  }
  .arrow_down {
    border-left: 25px solid transparent;
    border-right: 25px solid transparent;
    border-top: 15px solid #f70;
    height: 0;
    margin: 0 auto;
    width: 0;
  }
  li.mobile_link {
    float: left;
    text-align: center;
    width: 50%;
  }
  a, a:visited {
    color: #fff;
    font-family: 'oswaldRegular';
  }
  a:hover {
    border-bottom: 2px solid #08c;
    text-decoration: none;
  }
}


/* 4. Main Content Area
================================================== */

#main {
  margin-bottom: 1rem;
}

.breadcrumbs {
  font-family: 'oswaldRegular';
}

.slideshow {
  margin-bottom: 2rem;
  position: relative;
    li {
    margin-bottom: 0;
  }
  .slide {
    position: relative;
    h2 {
      background: rgba(0,0,0,.75);
      bottom: 0;
      color: #fafafa;
      margin: 0;
      padding: .5rem 0 .5rem 1rem;
      position: absolute;
      width: 100%;
    }
    a {
      height: 240px;
      position: absolute;
      width: 580px;
    }
  }
}

/* Dotted Dividers */
.dotted_divider {
  border-bottom: 1px dashed #fff;
}

.divider_title {
  margin-bottom: 1rem;
  text-align: center;
  h2 {
    margin-bottom: 0;
  }
}


/* Home Page Calendar */
.shop_calendar {
  background: rgba(0,0,0,.55);
  h3 {
    margin: 0 1rem 1rem;
    padding: 1rem 0 0;
  }
  ul.latest-blog-posts-list {
    padding: 0 1rem 1rem;
    li {
      border-bottom: 1px dotted #fff;
      padding-bottom: .5rem;
      h4 {
        margin-bottom: 0;
      }
    }
  }
}

/* Portals - Homepage/Parent Collection Page */
.collection_portal {
  margin-bottom: 2rem;
  .portal_title {
    color: #f70;
    margin-bottom: 0;
  }
  .collection-image, img {
    background: #222;
  }
  img {
    border: 2px solid #fff;
    border-radius: 2px;
    transition: opacity .2s linear;
    vertical-align: top;
  }
  img:hover {
    border: 2px solid #fff;
    opacity: .5;
  }
  h2, .collection_quantity {
    display: inline;
  }
}

/* Sub-Collection Listings */
.prod-price {
  display: block;
  font-style: italic;
}

/* Product - Single */
.product_breadcrumb {
  margin-bottom: 1rem;
}

.product_images {
  img {
    border: 2px solid #fff;
  }
}

.product_photos {
  margin-bottom: 2rem;
  .featured {
    margin-bottom: 1rem;
  }
  .thumbs {
    .image {
      display: inline-block;
      margin: 0 .25rem .5rem;
    }
  }
}

.product_info {
  h1 {
    border-bottom: 1px solid #fff;
    color: #fff;
  }
  h4 {
    color: #f70;
  }
  .product_add {
    margin-bottom: 2rem;
    .opener, #accordion {
      display: inline;
    }
    .opener {
      background: #08c;
      border-radius: 2px;
      padding: .25rem;
      cursor: pointer;
      transition: background .2s linear;
    }
    .opener:hover {
      background: #069;
    }
    .info_icon {
      cursor: pointer;
      margin-left: .5rem;
      vertical-align: sub;
      width: 15px;
    }
    .ui-accordion-content {
      position: relative;
      top: 2rem;
    }
  }
  .product_collection_type {
    border-bottom: 1px dotted #fff;
    border-top: 1px dotted #fff;
    li {
      float: left;
      margin-right: .5rem;
    }
  }
  .prev_next {
    .left {
      float: left;
    }
    .right {
      float: right;
    }
  }
  .product_share {
    display: inline-block;
    margin-bottom: 1rem;
    .social_link {
      float: left;
      margin-right: 1rem;
      padding-top: 1rem;
    }
  }
  .accent_text {
    margin-bottom: 2rem;
  }
}

/* Blog */
.blog_page_title {
  h2 {
    color: #f70;
  }
}

.blog {
  .blog_article {
    background: rgba(77,77,77,.55);
    margin-bottom: 2rem;
    padding: 1rem;
  }
  h1 {
    margin-bottom: 0;
  }
  .pagination {
    margin-bottom: 2rem;
    .prev {
      margin-right: 1rem;
    }
    .next {
      margin-left: 1rem;
    }
  }
}

.widget {
  margin-bottom: 2rem;
  li {
    border-bottom: 1px dotted #fff;
    padding-bottom: .125rem;
  }
}

.blog_subscribe {
  border-bottom: 1px solid #fff;
  padding-bottom: .125rem;
  img {
    margin-right: .5rem;
    max-width: 12px;
  }
  a, a:visited {
    color: #fff;
  }
}

  
/* 5. Footer 
================================================== */

.footer {
  border-bottom: 1px solid #f70;
  border-top: 2px solid #08c;
  margin-bottom: .5rem;
  padding: 1rem 0;
  ul {
    padding-top: .5rem;
  }
  li {
    margin-bottom: .25rem;
  }
  .footer_branding {
    img {
      max-width: 120px !important;
    }
  }
  .footer_social {
    padding-top: 1rem;
    a {
      background-image: url( {{ 'social_media_sprite.png' | asset_url }} );
      display: inline-block;
      overflow: hidden;
    }
    .footer_social_top,
    .footer_social_bottom {
      display: block;
      margin: 0 auto;
      width: 60px;
    }
    .footer_social_top {
      margin-bottom: 2rem;
    }
    .instagram {
      background-position: 0 0;
      clear: both;
      float: left;
      height: 18px;
      width: 18px;
    }

    .instagram:hover {
      background-position: 0 19px;
    }

    .tumblr {
      background-position: -32px 0;
      float: left;
      height: 19px;
      width: 18px;
    }

    .tumblr:hover {
      background-position: -32px -21px;
    }

    .twitter {
      background-position: -64px 0;
      float: right; 
      height: 19px;
      width: 18px;
    }

    .twitter:hover {
      background-position: -64px 19px;
    }

    .facebook {
      background-position: -98px 0;
      float: right; 
      height: 19px;
      width: 18px;
    }

    .facebook:hover {
      background-position: -98px 19px;
    }

    }

  }

.copyright_powers {
  padding: 10px 0;
  text-align: center;
}


/* Mobile Landscape Size to Tablet Portrait (devices and browsers) */
@media only screen and (min-width: 480px) and (max-width: 767px) {
  .top_utility {
    text-align: center;
    .search-form {
      margin-bottom: 1rem;
      margin-left: 0;
    }
    .utility_divider {
      display: none;
    }
  }
  .header {
    border-bottom: none;
    margin-bottom: 0;
    .shop_logo img {
      width: 75%;
    }
  }
  .nav.full_menu {
    display: none;
  }
  #mobile_menu_container {
    display: block;
    .mobile_menu_list {
      ul {
        float: left;
        width: 100%;
      }
    }
  }
  .blog_page_title {
    h2 {
      text-align: center;
    }
  }
  .pagination {
    text-align: center;
  }
  .footer {
    text-align: center;
    .columns {
      margin-bottom: 1.5rem;
    }
  }
  .copyright_powers {
    span {
      display: block;
      margin-bottom: 1rem;
    }
    .pipe {
      display: none;
    }
  }
}

/* Mobile Portrait Size to Mobile Landscape Size (devices and browsers) */
@media only screen and (max-width: 479px) {
  .top_utility {
    text-align: center;
    .search-form {
      margin-bottom: 1rem;
      margin-left: 0;
    }
    .utility_divider {
      display: none;
    }
  }
  .header {
    border-bottom: none;
    margin-bottom: 0;
    .shop_logo img {
      width: 75%;
    }
  }
  .nav.full_menu {
    display: none;
  }
  #mobile_menu_container {
    display: block;
    .mobile_menu_list {
      ul {
        float: left;
        width: 100%;
      }
    }
  }
  .blog_page_title {
    h2 {
      text-align: center;
    }
  }
  .pagination {
    text-align: center;
  }
  .footer {
    text-align: center;
    .columns {
      margin-bottom: 1.5rem;
    }
  }
  .copyright_powers {
    span {
      display: block;
      margin-bottom: 1rem;
    }
    .pipe {
      display: none;
    }
  }
}

.ui-widget-overlay {
  background: rgba(34,34,34,.5);
  height: 100%;
  left: 0;
  position: fixed;
  top: 0;
  width: 100%;
}

.ui-dialog {
  background: #000;
  border: 1px solid #08c;
  border-radius: 2px;
  box-shadow: 0 0 10px #08c;
  color: #fff;
  padding: 0 1rem;
  .ui-dialog-titlebar {
    border-bottom: 1px solid #f40;
    padding: 1rem 0;
    text-align: right;
    .ui-dialog-title {
      float: left;
    }
    button {
      border: none;
      background: transparent;
      background-image: url({{ 'dialog_close.png' | asset_url }});
      color: #fff;
      font-family: inherit;
      font-size: inherit;
      font-weight: normal;
      height: 16px;
      margin: 0;
      overflow: hidden;
      padding: 0;
      text-indent: -99999px;
      text-shadow: none;
      width: 15px;
    }
    button:hover {
      background-position: 0 -18px;
    }
  }
  .ui-dialog-content {
    padding: 1rem 0;
    .dialog_half {
      float: left;
      margin-bottom: 1rem;
      text-align: center;
      width: 50%;
    }
  }
}












