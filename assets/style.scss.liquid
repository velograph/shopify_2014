       url('oswald-regular.woff') format('woff'),
       url('oswald-regular.ttf') format('truetype'),
       url('oswald-regular.svg#webfont') format('svg');
}

/* Oswald Light */
@font-face {
  font-family: 'oswaldLight';
  src: url('oswald-light.eot');
